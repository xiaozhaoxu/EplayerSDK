<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent_small_black"

>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/li_trans_all">


        <LinearLayout
                android:id="@+id/layout_live_method"
                android:layout_width="@dimen/height_65"
                android:layout_height="@dimen/height_65"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_live_method_voice">

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_pause"
                android:layout_width="@dimen/height_83"
                android:layout_height="@dimen/height_83"
                android:layout_marginTop="@dimen/height_50"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/pause_icon">

        </LinearLayout>

        <TextView
                android:id="@+id/tv_live_status"
                android:layout_width="@dimen/height_83"
                android:layout_height="@dimen/height_25"
                android:background="@drawable/chat_item_content_bg"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/height_18"
                android:textColor="@color/white"
                android:textSize="@dimen/title4_textsize"
                android:visibility="gone"
                android:text="直播未开始"/>
    </LinearLayout>
</LinearLayout>