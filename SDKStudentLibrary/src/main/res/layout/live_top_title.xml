<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_top_title_all"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_50"
    android:background="@drawable/top_title_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/li_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_toptitle_space"
            android:layout_marginRight="@dimen/common_toptitle_space"
            android:background="@drawable/commont_title_back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_teacher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/li_back"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/common_toptitle_icon_width"
            android:layout_height="@dimen/common_toptitle_icon_width"
            android:background="@drawable/teacher_icon_default_sdk"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_teacher_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_toptitle_space"
            android:layout_marginRight="@dimen/common_toptitle_space"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/title2_textsize" />

            <TextView
                android:id="@+id/tv_top_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/audio_praise_num"
                android:drawablePadding="@dimen/height_5"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="@dimen/title4_textsize" />
            <TextView
                android:id="@+id/tv_top_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/title4_textsize"
                android:singleLine="true"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_change_live_method"
        android:layout_width="@dimen/height_45"
        android:layout_height="@dimen/height_45"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/height_10"
        android:layout_marginLeft="@dimen/common_toptitle_space"
        android:layout_marginRight="@dimen/height_5"
        android:src="@drawable/change_live_method" />
</RelativeLayout>